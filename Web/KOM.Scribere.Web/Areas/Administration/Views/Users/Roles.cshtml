@model KOM.Scribere.Web.ViewModels.Users.UsernamesRolesIndexViewModel
@{
    this.ViewData["Title"] = "Add user in role";
}

<div class="container-fluid">
    <div class="row">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">@this.ViewData["Title"]</h1>
        </div>
        <form method="post">
            <div class="row">
                <div class="col-xl-6 col-md-9 mb-4">
                    <section class="form-group">
                        <label asp-for="@this.Model.UserId" class="control-label"></label>
                        <section class="field mb-4">
                            <select class="ui fluid search selection dropdown" asp-for="@this.Model.UserId" asp-items="@this.Model.Users">
                                <option value="">Select Username...</option>
                            </select>
                            <span asp-validation-for="@this.Model.UserId" class="text-danger"></span>
                        </section>
                    </section>
                </div>
                <div class="col-xl-3 col-md-9 mb-4">
                    <section class="form-group">
                        <label asp-for="@this.Model.RoleId" class="control-label"></label>
                        <section class="field mb-4">
                            <select class="ui fluid search selection dropdown" asp-for="@this.Model.RoleId" asp-items="@this.Model.Roles">
                                <option value="">Select Role...</option>
                            </select>
                            <span asp-validation-for="@this.Model.RoleId" class="text-danger"></span>
                        </section>
                    </section>
                </div>
                <div class="col-xl-3 col-md-6 mt-2">
                    <label class="control-label"></label>
                    <section class="field mb-4">
                        <button asp-area="Administration" asp-controller="Users" asp-action="AddUserInRole" class="btn btn-success btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-check"></i>
                            </span>
                            <span class="text">Add user in role</span>
                        </button>
                    </section>
                </div>
            </div>
        </form>
    </div>
</div>

@section CustomCss {
    <link href="~/administration/css/dropDown.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    <script>
        $('.ui.fluid').dropdown();
    </script>
}